<h2>Edit Profile</h2>

<%= form_with(model: @user, local: true) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>

  <div>
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to "Change password", update_password_path %>
<%= link_to "Back to profile", user_path(current_user) %>
